<%= link_to "New Design", new_design_path %>
<% @designs.each do |design| %>
  <h3><%= design.title.html_safe %></h3>
  <p><%= design.body.html_safe %></p>
  <%= link_to "Edit Design", edit_design_path(design) %>
  <%= link_to "Delete Design", design_path(design), method: :delete, data: { confirm: 'Are you sure?'} %>
  <% if design != @designs.last %>
  <hr />
  <% end %>
<% end %>