<%= link_to "New Spec", new_spec_path %>
<% @specs.each do |spec| %>
  <h3><%= spec.title.html_safe %></h3>
  <p><%= spec.body.html_safe %></p>
  <%= link_to "Show", spec_path(spec) %>
  <%= link_to "Edit", edit_spec_path(spec) %>
  <%= link_to "Delete", spec_path(spec), method: :delete, data: { confirm: 'Are you sure?'} %>
  <% if spec != @specs.last %>
  <hr />
  <% end %>
<% end %>